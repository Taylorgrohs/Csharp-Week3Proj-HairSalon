<!DOCTYPE html>
<html>
  <head>
    <title>Hair Salon</title>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
  </head>
  <body>
    @if (@Model.Count == 0)
    {
      <p>No clients have been added yet!</p>
    }
    else
    {
      <h1>Here is a list of Clients:</h1>
      <ul>
        @foreach(var client in Model)
        {
          <li>@client.GetName()  <a href="/client/edit/@client.GetId()">Edit</a> | <a href="/client/delete/@client.GetId()">Delete</a></li>
        }
      </ul>
      <form action="/clients/delete" method="post">
        <button type="submit">Clear all Clients</button>
      </form>
      <p><a href="/clients/new">Add a new Client</a></p>
      <p><a href="/">Home</a></p>
  </body>
</html>
