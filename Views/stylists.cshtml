<!DOCTYPE html>
<html>
  <head>
    <title>Hair Salon</title>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
  </head>
  <body>
    <h1>All Stylists</h1>
    @if (@Model.Count == 0)
    {
      <p>There are no stylists.</p>
    }
    <ul>
      @foreach (var stylist in @Model)
      {
        <li><a href="/stylists/@stylist.GetId()">@stylist.GetName()</a>  <a href="/stylist/edit/@stylist.GetId()">Edit</a> | <a href="/stylist/delete/@stylist.GetId()">Delete</a></li>
      }
    </ul>
    <p><a href="/stylists/new">Add new stylists</a></p>
    <p><a href="/">Home</a></p>
  </body>
</html>
